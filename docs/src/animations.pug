extends /_includes/_layouts/core

block config
  - pageTitle = "Animations"
  -
    const manualClasses = [
      '.animation-spin',
      '.animation-spin.duration-5',
      '.animation-spin.ease-in',
      '.animation-spin.loop-1',
      '.animation-spin.hover_animation-paused',
    ]

block content
  .screenshot.bg-gray-3.flrw.p-1
    each classNames in manualClasses
      - const classesAsArray = classNames.split('.')
      .fln.w-50p.flrnw.flc.p-1
        .bg-white.border-gray.shadow.rounded.p-1.cursor-default.flrnw.flc(class=classesAsArray)=classNames
